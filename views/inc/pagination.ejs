<ul class="pagination">
    <% if (currentPage !== 1 && previousPage !== 1) { %>
    <li><a href="?page=1">1</a></li>
    <% } %>
    <% if (hasPreviousPage) { %>
    <li> <a href="?page=<%= previousPage %>"><%= previousPage %></a>
        <% } %></li>
    <li><a href="?page=<%= currentPage %>" class="active"><%= currentPage %></a>
        <% if (hasNextPage) { %></li>
    <li><a href="?page=<%= nextPage %>"><%= nextPage %></a>
        <% } %></li>
    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
    <li><a href="?page=<%= lastPage %>"><%= lastPage %></a></li>
    <% } %>
</ul>