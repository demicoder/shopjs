<%- include('../inc/head.ejs') %>
</head>
<%- include('../inc/nav.ejs') %>

<body>
    <main>
        <%- include('../inc/error-msg.ejs', { errorMsg }) %>

        <form action="/login" method="post" class="auth-form" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-control">
                <label for="email"> E-mail </label>
                <input required id="email" value="<%= oldValues.email %>" type="email" name="email"
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>">
            </div>

            <div class="form-control">
                <label for="password"> Password </label>
                <input required id="password" value="<%= oldValues.password %>" type="password" name="password"
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>">
            </div>
            <div class="form-flex-wrap">
                <button class="btn" type="submit">Login</button>
                <p><a class="link forgot-password" href="/reset-password">Forgot Password?</a></p>
            </div>


        </form>
    </main>
    <%- include('../inc/end.ejs') %>